<script type="text/javascript">




  document.addEventListener('historyPaymentMethodChanged', e => {
    for(let property in e.detail.newOrder.order.properties){
      if(e.detail.newOrder.order.properties[property].typeId === 3){
        if (e.detail.newOrder.order.properties[property].value == 6003) {
          document.getElementById("reinitPaymentMethod-" + e.detail.oldOrder.id).style.display = "block";
        } else {
          document.getElementById("reinitPaymentMethod-" + e.detail.oldOrder.id).style.display = "none";
        }
      }
    }
  });
</script>


